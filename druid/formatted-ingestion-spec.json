{
  "type": "kafka",
  "spec": {
    "dataSchema": {
      "dataSource": "formatted",
      "timestampSpec": {
        "column": "date",
        "format": "iso"
      },
      "dimensionsSpec": {
        "dimensions": [
          {
            "type": "string",
            "name": "id"
          },
          {
            "type": "string",
            "name": "sender"
          },
          {
            "type": "string",
            "name": "message"
          },
          {
            "type": "string",
            "name": "files",
            "multiValueHandling": "SORTED_ARRAY"
          }
        ]
      },
      "metricsSpec": [
        {
          "type": "count",
          "name": "count"
        },
        {
          "type": "hyperUnique",
          "name": "unique_tickets",
          "fieldName": "id"
        },
        {
          "type": "hyperUnique",
          "name": "unique_senders",
          "fieldName": "sender"
        },
        {
          "type": "longSum",
          "name": "total_files",
          "fieldName": "files_count"
        }
      ],
      "granularitySpec": {
        "type": "uniform",
        "segmentGranularity": "HOUR",
        "queryGranularity": "MINUTE",
        "rollup": false
      }
    },
    "ioConfig": {
      "topic": "tickets_formatted",
      "inputFormat": {
        "type": "json"
      },
      "consumerProperties": {
        "bootstrap.servers": "kafka:9092"
      },
      "taskCount": 1,
      "replicas": 1,
      "taskDuration": "PT1H",
      "useEarliestOffset": true
    },
    "tuningConfig": {
      "type": "kafka",
      "maxRowsPerSegment": 5000000
    }
  }
}
